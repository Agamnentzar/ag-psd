{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2016", "dom"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"declaration": true,
		"useUnknownInCatchVariables": false,
		"strict": true,
		"sourceMap": true,
		"sourceRoot": "../src",
		"outDir": "dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}